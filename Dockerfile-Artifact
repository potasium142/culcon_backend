# Build stage
FROM docker.io/eclipse-temurin:21-jdk-alpine-3.21 AS build
WORKDIR /app
COPY . .
RUN ./gradlew clean build -x test --parallel

# Runtime stage
FROM docker.io/eclipse-temurin:21-jre-alpine-3.21
WORKDIR /workdir
COPY --from=build /app/build/libs/backend-0.0.1-SNAPSHOT.jar /workdir/app.jar
EXPOSE 8080
ENTRYPOINT ["java","-jar","/workdir/app.jar"]
